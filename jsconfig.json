{
    "compilerOptions": {
      "baseUrl": ".", // Set base directory for module resolution
      "paths": {
        "@/*": ["src/*"] // Alias @ to point to the src directory
      },
      "jsx": "react-jsx", // Ensure JSX is transpiled correctly
      "target": "esnext", // Latest JS features
      "moduleResolution": "node", // Standard module resolution for Vite
      "module": "esnext" // Use ES modules
    },
    "include": [
      "src/**/*" // Include all files inside src
    ],
    "exclude": [
      "node_modules" // Exclude node_modules
    ]
  }